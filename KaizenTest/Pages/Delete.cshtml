@page
@model KaizenTest.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Page";
}

<div class="form-group text-center jumbotron">
    <h1>Delete Page</h1>
    <p>Kaizen Demo</p>
</div>



<div>
    <div class="form-group shadow text-center pb-4">
        <div>
            <h4>@Html.DisplayNameFor(model => model.Todo.todoDesc)</h4>
            <h3>@Html.DisplayFor(model => model.Todo.todoDesc)</h3>
        </div>
        <div>
            <span>@Html.DisplayNameFor(model => model.Todo.isCompleted)</span>
            <h3> @Html.DisplayFor(model => model.Todo.isCompleted)</h3>
        </div>
    </div>

    <form method="post" class="text-center">
        <input type="hidden" asp-for="Todo.ID" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
        <a asp-page="./Index" class="btn btn-warning btn-sm">Back to Index</a>
    </form>
</div>