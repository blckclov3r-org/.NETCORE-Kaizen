@page
@model KaizenTest.Pages.EditModel
@{
    ViewData["Title"] = "Edit Page";
}

<div class="form-group text-center jumbotron">
    <h1>Edit Page</h1>
    <p>Kaizen Demo</p>
</div>

<form method="post" asp-route-Id="@Model.Todo.ID">

    <div class="form-group">
        <label asp-for="Todo.todoDesc"></label>
        <input asp-for="Todo.todoDesc" class="form-control" />
    </div>


    <div class="form-check text-center">
        <input class="form-check-input" type="checkbox" asp-for="Todo.isCompleted" />

        <label asp-for="Todo.isCompleted"></label>

    </div>
    <div class="d-flex justify-content-center mt-2">
        <input type="submit" class="btn btn-sm btn-warning center-block" value="Update" />
    </div>
    <div class="d-flex justify-content-center my-2">
        <a  asp-page="./Index" class="btn btn-sm btn-primary center-block" >Back to Index</a>
    </div>
</form>